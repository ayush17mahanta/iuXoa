<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SnoraX" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Use the same colors for both light and dark themes -->
        <item name="android:textColorPrimary">@color/black</item>

        <!-- You can add other color customizations as needed -->
        <item name="colorPrimary">@color/black</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="PopupMenuStyle" parent="Widget.Material3.PopupMenu">
        <item name="android:popupBackground">@drawable/menu_background</item>
    </style>


    <!-- The main theme will inherit from the base theme -->
    <style name="Theme.SnoraX" parent="Base.Theme.SnoraX" />
</resources>
